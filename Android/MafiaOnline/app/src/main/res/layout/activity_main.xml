<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.zimincom.mafiaonline.MainActivity">


    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/main_icon">

    </ImageView>

    <ImageView
        android:id="@+id/logo_text"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:src="@drawable/login_title"
        android:layout_below="@+id/logo_image"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>


    <android.support.design.widget.TextInputEditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:visibility="gone"
        android:textColorHint="@color/colorMainText"
        android:textColor="@color/colorMainText"
        android:backgroundTint="@color/colorMainText"
        android:textColorHighlight="@color/colorMainText"

        android:hint="이메일을 입력하세요"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textWebPassword"
        android:padding="20dp"
        android:visibility="gone"
        android:textColorHint="@color/colorMainText"
        android:textColor="@color/colorMainText"
        android:backgroundTint="@color/colorMainText"
        android:hint="비밀번호를 입력하세요"/>

    <Button
        android:id="@+id/login"
        android:text="LOGIN"
        android:layout_below="@id/password"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@color/colorAccent"
        android:textColor="@color/colorMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/signin"
        android:text="회원가입"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="@color/colorAccent"
        android:textColor="@color/colorMainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
